{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "mfarix/fibonacci-calculator-client:<TAG>",
      "hostname": "client",
      "environment": [
        {
          "name": "Container",
          "value": "React"
        }
      ],
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "mfarix/fibonacci-calculator-server:<TAG>",
      "hostname": "api",
      "environment": [
        {
          "name": "Container",
          "value": "API"
        }
      ],
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "mfarix/fibonacci-calculator-worker:<TAG>",
      "hostname": "worker",
      "environment": [
        {
          "name": "Container",
          "value": "Worker"
        }
      ],
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "fibonacci-calculator-nginx:<TAG>",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "client",
        "server"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}
